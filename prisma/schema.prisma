generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model employees {
  id          Int      @id @default(autoincrement())
  username    String
  password    String
  name        String
  surname     String
  email       String?
  img         String?
  status      String   @default("ON")
  position_id Int
  login_fail  Int
  created_by  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  birthday    DateTime
  id_google   String?  @unique

  stocks         stock[]
  categoryStocks categorystock[]
  suppliers      supplier[]
  menu           menu[]
  table          table[]
  organizationId Int?
  organization   organization?   @relation(fields: [organizationId], references: [id])
}

model categorystock {
  id           Int      @id @default(autoincrement())
  categoryName String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  createdById Int
  creator     employees @relation(fields: [createdById], references: [id])

  stocks         stock[]
  menu           menu[]
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])

  @@map("categorystock")
}

model supplier {
  id           Int      @id @default(autoincrement())
  supplierName String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  createdById Int
  creator     employees @relation(fields: [createdById], references: [id])

  stocks         stock[]
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])
}

model stock {
  id          Int      @id @default(autoincrement())
  productName String
  quantity    Int
  price       Float
  max         Float    @default(0)
  min         Float    @default(0)
  unit        String
  description String?
  img         String?
  status      String   @default("ON_STOCK")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdById    Int
  creator        employees     @relation(fields: [createdById], references: [id])
  categoryId     Int
  category       categorystock @relation(fields: [categoryId], references: [id])
  supplierId     Int
  supplier       supplier      @relation(fields: [supplierId], references: [id])
  unitPriceId    Int           @default(1)
  unitPrice      unitprice     @relation(fields: [unitPriceId], references: [id])
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])

  formularstock formularstock[]
}

model menu {
  id          Int      @id @default(autoincrement())
  menuName    String
  price_sale  Float
  price_cost  Float
  unit        String
  img         String?
  description String?
  status      String   @default("OFF_SALE") //@default("ON_SALE") for SALE menu
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdById    Int
  creator        employees     @relation(fields: [createdById], references: [id])
  categoryMenuId Int
  category       categorystock @relation(fields: [categoryMenuId], references: [id])
  unitPriceId    Int           @default(1)
  unitPrice      unitprice     @relation(fields: [unitPriceId], references: [id])
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])

  formularstock formularstock[]
  order         order[]

  carts cart[]
}

model formularstock {
  id         Int      @id @default(autoincrement())
  pcs_update Int
  status     String   @default("RUN_FORMULAR")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  menuId         Int
  menu           menu          @relation(fields: [menuId], references: [id])
  stockId        Int
  stock          stock         @relation(fields: [stockId], references: [id])
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])
}

model table {
  id             Int      @id @default(autoincrement())
  status         String
  tableName      String
  tableBookingBy String?
  cashType       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  closeById Int
  creator   employees @relation(fields: [closeById], references: [id])

  order          order[]
  carts          cart[]
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])
}

model order {
  id                 Int      @id @default(autoincrement())
  quantity           Int
  price_sum          Float
  price_pre_unit     Float
  orderDetail        String?
  order_running_code String?
  status             String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  menuId         Int
  menu           menu          @relation(fields: [menuId], references: [id])
  tableId        Int
  table          table         @relation(fields: [tableId], references: [id])
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])
}

model unitprice {
  id        Int      @id @default(autoincrement())
  value     String
  label     String
  flag      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  menus          menu[]
  stocks         stock[]
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])
}

model cart {
  id             Int      @id @default(autoincrement())
  quantity       Int
  price_sum      Float
  price_pre_unit Float
  status         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  menuId         Int
  menu           menu          @relation(fields: [menuId], references: [id])
  tableId        Int
  table          table         @relation(fields: [tableId], references: [id])
  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])
}

model orderrunning {
  id          Int      @id @default(autoincrement())
  runningCode String
  createdAt   DateTime @default(now())

  organizationId Int?
  organization   organization? @relation(fields: [organizationId], references: [id])
}

model organization {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String?
  ownerId   Int
  createdAt DateTime @default(now())

  // Relation ไปยังข้อมูลอื่นๆ
  menus          menu[]
  orders         order[]
  employees      employees[]
  categories     categorystock[]
  tables         table[]
  unitprices     unitprice[]
  carts          cart[]
  stocks         stock[]
  suppliers      supplier[]
  formularstocks formularstock[]
  order_runnings orderrunning[]
}
